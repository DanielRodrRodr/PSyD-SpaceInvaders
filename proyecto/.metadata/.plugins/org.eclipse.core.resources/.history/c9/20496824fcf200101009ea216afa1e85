#include "config.h"
#include "pixmaps.h"
#include "shield.h"

void shield_init( Shield *self, uint16 col )
{
    self->col    = col;
    self->row    = SHIELD_ROW;
    self->sprite = (Sprite){ SHIELD_WIDTH, SHIELD_HEIGHT, shieldPixMap };
}

void shield_launch( Shield *self )
{
    sprite_draw( &self->sprite, &self->col, &self->row );
}